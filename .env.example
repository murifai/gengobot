# Database - Local PostgreSQL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gengobot

# NextAuth v5 Configuration
# Generate a secret with: openssl rand -base64 32
AUTH_SECRET=your_auth_secret_here
NEXTAUTH_URL=http://localhost:3000

# JWT Configuration (for API v1 authentication)
# Generate a secret with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Mailjet Configuration
MAILJET_API_PUBLIC_KEY=your_mailjet_api_public_key
MAILJET_API_PRIVATE_KEY=your_mailjet_api_private_key
MAILJET_FROM_EMAIL=noreply@yourdomain.com
MAILJET_FROM_NAME=Gengobot

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Midtrans Configuration
# Get keys from https://dashboard.midtrans.com or https://dashboard.sandbox.midtrans.com
MIDTRANS_SERVER_KEY_SANDBOX=SB-Mid-server-xxx
MIDTRANS_CLIENT_KEY_SANDBOX=SB-Mid-client-xxx
MIDTRANS_SERVER_KEY_PRODUCTION=Mid-server-xxx
MIDTRANS_CLIENT_KEY_PRODUCTION=Mid-client-xxx
MIDTRANS_IS_PRODUCTION=false
# For mock mode (no Midtrans account needed), set this to true
MIDTRANS_MOCK_MODE=true

# Ngrok (for sandbox webhook testing)
# This will be auto-updated by scripts/start-with-ngrok.sh
NGROK_URL=
