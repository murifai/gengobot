    "db:reset": "npx prisma migrate reset",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio",
    "setup:furigana": "bash scripts/setup-furigana.sh",
    "user:create": "ts-node scripts/create-test-users.ts",
    "user:create-db": "tsx scripts/create-db-users.ts",
    "user:list": "ts-node scripts/list-users.ts",
    "user:set-admin": "ts-node scripts/set-admin.ts"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
