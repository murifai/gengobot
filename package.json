    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "kuroshiro": "^1.2.0",
    "kuroshiro-analyzer-kuromoji": "^1.1.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "openai": "^4.0.0",
    "prisma": "^5.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5"
